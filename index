  <div class="container">
    <h1>Готовы к незабываемому путешествию?</h1>
    <h2>Регистрация</h2>
    <form id="registrationForm">
      <input type="text" id="name" placeholder="ФИО" required>
      <input type="text" id="company" placeholder="Компания" required>
      <input type="text" id="city" placeholder="Город" required>
      <input type="tel" id="phone" placeholder="Телефон" required>
      <input type="email" id="email" placeholder="Email" required>
      <button type="submit">ЗА БИЛЕТОМ В ЯПОНИЮ</button>
    </form>
    <div class="footer">
      Мы свяжемся с вами, чтобы обсудить детали – никаких случайных звонков, только важное.
    </div>
  </div>

  <script>
    document.getElementById('registrationForm').addEventListener('submit', function(event) {
      event.preventDefault();

      const formData = {
        name: document.getElementById('name').value,
        company: document.getElementById('company').value,
        city: document.getElementById('city').value,
        phone: document.getElementById('phone').value,
        email: document.getElementById('email').value,
        timestamp: new Date().toLocaleString()
      };

      // Отправка данных на сервер
      fetch('https://script.google.com/macros/s/AKfycbwS0q1XyQv5ajp3-Wcf4hjWg35L4TNpiAr9JpYkgFb9VXxLaBHt73Xq2wpr4UBtIUP0bQ/exec', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(formData)
      })
      .then(response => response.json())
      .then(data => {
        alert('Ваша заявка успешно отправлена!');
        document.getElementById('registrationForm').reset();
      })
      .catch(error => {
        console.error('Ошибка:', error);
        alert('Произошла ошибка при отправке данных.');
      });
    });
  </script>
